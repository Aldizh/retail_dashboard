{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "react/prop-types": 0,
    "no-unused-vars": "warn",
    "no-param-reassign": ["error", { "props": false }],
  },
  "globals": {
    "window": true,
    "document": true
  }
}
